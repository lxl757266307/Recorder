<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/recorder_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.kanade.recorder.VideoProgressBtn
        android:id="@+id/recorder_progress"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/recorder_focus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/recorder_focus"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="162dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/recorder_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/recorder_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="67dp"
        app:layout_constraintRight_toLeftOf="@id/recorder_progress"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/recorder_cancelbtn"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:src="@drawable/recorder_cancel"
        android:padding="@dimen/btn_padding"
        android:background="@drawable/recorder_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/recorder_certainbtn"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:src="@drawable/recorder_certain"
        android:padding="@dimen/btn_padding"
        android:background="@drawable/recorder_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="45dp"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
